{
  "manifest_version": 3,
  "name": "Kleinanzeigen Copilot",
  "description": "Shows a quick overview of the current flat listing and generates a message template.",
  "version": "0.0.1",
  "permissions": ["storage", "scripting", "activeTab", "clipboardWrite"],
  "content_scripts": [
    {
      "matches": ["*://www.kleinanzeigen.de/*"],
      "js": ["src/content/main.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/main.js",
        "src/content/extractListing.js",
        "src/content/uiPanel.js",
        "src/content/messageActions.js",
        "src/prompts/*.js",
        "src/storage.js",
        "src/openrouterClient.js",
        "src/config.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "Kleinanzeigen Copilot",
    "default_popup": "src/popup/popup.html"
  }
}
