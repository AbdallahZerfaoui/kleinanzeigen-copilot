{
  "manifest_version": 3,
  "name": "Kleinanzeigen Copilot",
  "description": "Shows a quick overview of the current flat listing and generates a message template.",
  "version": "0.0.1",
  "permissions": ["storage", "scripting", "activeTab", "clipboardWrite"],
  "content_scripts": [
    {
      "matches": ["*://www.kleinanzeigen.de/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Kleinanzeigen Copilot",
    "default_popup": "popup.html"
  }
}
